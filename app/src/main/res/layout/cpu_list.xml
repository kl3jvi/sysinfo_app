<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="frequency"
            type="Long" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coreNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Core 0"
                android:textColor="#263238"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_bullet" />

            <TextView
                android:id="@+id/freq_cpu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:text="2000 MHz"
                android:textColor="#4f5b62"
                android:textStyle="bold" />


        </LinearLayout>

        <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
            android:id="@+id/cpuProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:rcBackgroundColor="#babdbe"
            app:rcBackgroundPadding="5dp"
            app:rcIconPadding="1dp"
            app:rcIconSize="25dp"
            app:rcIconSrc="@drawable/ic_cpu_white"
            app:rcMax="100"

            app:rcProgressColor="@color/colorAccent"
            app:rcRadius="8dp">

        </com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/minFreqOfCpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:text="0MHz"
                android:textColor="#263238"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/maxFreqOfCpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                android:text="2000MHz"
                android:textColor="#263238"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>